/* bun animations  */
.hamburglar.is-open {
  .burger-topbun {
    animation: bun-top-out 0.6s linear normal;
    animation-fill-mode:forwards;
  }
  .burger-botbun {
    animation: bun-bot-out 0.6s linear normal;
    animation-fill-mode:forwards;
  }
}
.hamburglar.is-closed {
  .burger-topbun {
    animation: bun-top-in 0.6s linear normal;
    animation-fill-mode:forwards;
  }
  .burger-botbun {
    animation: bun-bot-in 0.6s linear normal;
    animation-fill-mode:forwards;
  }
}


/* Transition Animations */
.hamburglar.is-open .burger-topbun {
    animation: bun-top-out 0.6s linear forwards;
}

.hamburglar.is-open .burger-botbun {
    animation: bun-bot-out 0.6s linear forwards;
}

.hamburglar.is-closed .burger-topbun {
    animation: bun-top-in 0.6s linear forwards;
}

.hamburglar.is-closed {
    .burger-filling {
      animation: burger-fill-in 0.6s linear normal;
      animation-fill-mode:forwards;
    }
  }

.hamburglar.is-closed .burger-botbun {
    animation: bun-bot-in 0.6s linear forwards;
}


