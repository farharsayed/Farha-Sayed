
input[type="checkbox"]{
  
  /* -webkit-appearance: none; */
  visibility: hidden;
  display: none;
}

.hamburger-menu {
  position: relative;
  cursor: pointer;
  display: flex;
  justify-content: center;
}

.hamburger-menu .middle {
  height: 6px;
  width: 80px;
  background: black;
  border-radius: 50px;
  position: absolute;
  transition: 0.3s ease;
}

.hamburger-menu .top {
  bottom: 14px;
  height: 6px;
  width: 80px;
  background: black;
  border-radius: 50px;
  position: absolute;
  transition: 0.3s ease;
}

.hamburger-menu .bottom {
  top: 20px;
  height: 6px;
  width: 80px;
  background: #fff;
  border-radius: 50px;
  position: absolute;
  transition: 0.3s ease;
}


input[type="checkbox"]:checked ~ .hamburger-menu .top{
  transform: rotate(-45deg);
  width: 70px;
  transform-origin: right;
  top: -25px;
}

input[type="checkbox"]:checked ~ .hamburger-menu .bottom {
  transform: rotate(45deg);
  width: 70px;
  transform-origin: right;
  top: 25px;
}
input[type="checkbox"]:checked ~ .hamburger-menu .middle {
  transform: translateX(20px);
  opacity: 0;
} 




